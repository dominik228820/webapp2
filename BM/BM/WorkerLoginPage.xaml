<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BM.WorkerLoginPage"
             BackgroundColor="#34b7eb"
             >
   
    <StackLayout  Padding="40" VerticalOptions="Center" HorizontalOptions="FillAndExpand">

        <Image Source="BMlogo.png" WidthRequest="180" HeightRequest="180" />

        <Entry x:Name="Login" MaxLength="10" Placeholder="Login" PlaceholderColor="#036ffc" TextColor="Black"/>
        <Entry x:Name="Password" Placeholder="Password" PlaceholderColor="#036ffc" TextColor="Black" IsPassword="true"/>

        <Button 
            x:Name="Zaloguj"
            VerticalOptions="Center"
            Text="Zaloguj"
            TextColor="Black"
            BackgroundColor="#346beb"
            BorderColor="#3477eb"
            BorderWidth="1.5"
            CornerRadius="50"
            Clicked="Zaloguj_Clicked"
     
        ></Button>


        <Label  HorizontalOptions="Center" >

            <Label.FormattedText>
                <FormattedString>
                    <Span Text="Skontaktuj sie z " />
                    <Span Text="GK_mobile" FontAttributes="Bold" TextDecorations="Underline"/>
                    <Span Text=" aby móc korzystać z aplikacji"/>
                </FormattedString>
            </Label.FormattedText>



        </Label>




    </StackLayout>
    
</ContentPage>